
<div class="container people-banner home-wrapper">
  <div class="container d-flex align-items-center">
      <div class="ml-4"><h3>People</h3></div>
  </div>
</div>

<div class="container pb-5 pt-4 mt-0 container-background">

<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <p class="w-50 mb-0"> <%= link_to "#{user.first_name} #{user.last_name}  (#{user.job_title}) ", user_path(user) %> </p>

      <% if user.is_manager == true %>
        <span class="badge badge-danger badge-pill"> Mgr </span>
      <% end %>

      <% if user.user_skills.all.count > 0 %>
        <span class="badge badge-primary badge-pill"><%= user.user_skills.all.count %></span>
        <% else %>
        <span class="badge badge-secondary badge-pill"><%= user.user_skills.all.count %></span>
      <% end %>
    </li>
  <% end %>
</ul>

</div>
