<div class="container">
  <div class="d-flex justify-content-between align-items-center">
  <h3>Update my profile</h3>
  <%= link_to teams_path, class: "btn btn-secondary" do %>
      <i class="fas fa-undo-alt mr-2"></i> my profile
    <% end %>
  </div>

  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :network_id %>
    <%= f.input :job_title %>
    <%= f.input :chapter %>
    <%= f.input :availability, input_html: { min: 1, max: 100 }  %>
    <%= f.input :is_manager, as: :select %>
    <%= f.association :manager, label_method: :fullname, value_method: :id, include_blank: false%>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.association :site, as: :select, label_method: :city, value_method: :id, include_blank: false %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

  </div>

