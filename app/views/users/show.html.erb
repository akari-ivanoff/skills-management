<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><%= @user.first_name %> <%= @user.last_name %></h3>
  <%= link_to users_path, class: "btn btn-secondary" do %>
  <i class="fas fa-undo-alt"></i> All co-workers
  <% end %>
</div>

<% if @user == current_user %>
<%= link_to edit_user_path, class: "btn btn-primary w-100" do %>
<i class="fas fa-pen"></i> Team
<% end %>
<% end %>

<hr>

  <div class="d-flex card p-3 mb-3 mr-3 user-details">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <%= cl_image_tag(@user.photo,
        width: 250, height: 250, crop: :thumb, gravity: :face) %>
      </div>

      <div>
        <p> <strong> <i class="fas fa-network-wired"></i> Job title: </strong> <%= @user.job_title %></p>
        <p> <strong> <i class="fas fa-users"></i> Chapter: </strong> <%= @user.chapter %></p>
        <div>
          <p> <strong> <i class="fas fa-sun"></i> Availability | <i class="fas fa-moon"></i> Occupancy </strong> </p>
          <h3> <i class="fas fa-sun"></i> <%= @user.availability %>% | <i class="fas fa-moon"></i> 80% </h3>
        </div>
      </div>

      <div>
        <% if @user.is_manager == "true" %>
          <p> <strong> <i class="fas fa-user-tie"></i> Manager: </strong> Yes </p>
        <% else %>
          <p> <strong> <i class="fas fa-user-tie"></i> Manager: </strong> <%= link_to "#{@user.manager.first_name} #{@user.manager.last_name}", user_path(@user.manager) %></p>
        <% end %>
        <p> <strong> <i class="fas fa-building"></i> </strong> <%= @user.site.country %>, <%= @user.site.city %></p>
        <p><strong><i class="fas fa-at"></i> </strong> <%= @user.email %></p>
        <p><strong><i class="fas fa-id-card-alt"></i></strong> <%= @user.network_id %></p>
      </div>
    </div>
  </div>

  <div class="card p-3 mb-3 user-details">
    <div class="d-flex justify-content-between align-items-center">
      <h3>User Skills</h3>
    </div>

    <%= link_to "View skills", user_user_skills_path(@user) %>

  </div>






