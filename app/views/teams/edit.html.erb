<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Update your team</h3>
   <%= link_to team_path(@team), class: "btn btn-secondary" do %>
  <i class="fas fa-undo-alt"></i> Team
  <% end %>
</div>
  <%= render 'team_form', task: @team %>
  <hr>
  <br>
  <%= link_to team_path(@team), method: :delete, data: { confirm: "Are you sure you want to delete #{@team.name} team? All linked team roles and skills will be also deleted." }, class: "btn btn-primary text-white" do %>
  <i class="fas fa-trash"></i> Delete this team
  <% end %>
