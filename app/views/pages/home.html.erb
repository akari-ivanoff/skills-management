<div class="home-wrapper">

  <div class="banner">
    <div class="container">
      <h1>Find the perfect match to your skill needs</h1>
      <br>
      <br>
      <br>
      <form action="/pages/index" method="GET" class="">
        <select class="query-select-boxes" name="query[]" multiple="multiple" style="width: 75%" id="select2Selector">
          <% @skills.each do |skill| %>
          <option value="<%= skill.name %>"><%= skill.name %></option>
          <% end %>
        </select>
        <button id = "searchbutton_home" name="button" type="submit" class="btn btn-flat btn-dark">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>

  </div>

</div>
